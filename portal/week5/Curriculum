    <script>
        function generatePDF(week) {
            const content = `Week ${week} Reverence Workbook\n\nYour journey of sacred respect is recorded here.\n\nContinue honoring the divine in all things.`;
            downloadText(content, `Reverence_Week${week}.txt`);
            alert('Reverence exercises saved!');
        }
        
        function downloadText(text, filename) {
            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            a.click();
        }
        
        // Auto-save
        document.querySelectorAll('textarea, input').forEach((el, idx) => {
            el.addEventListener('input', () => {
                localStorage.setItem(`reverence_${idx}`, el.value);
            });
            const saved = localStorage.getItem(`reverence_${idx}`);
            if (saved) el.value = saved;
        });
    </script>
