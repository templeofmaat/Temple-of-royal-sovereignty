    <script>
        function generatePDF(week) {
            const challenges = [];
            document.querySelectorAll('input[type="text"]').forEach(input => {
                if (input.value) challenges.push(input.value);
            });
            
            const content = `Week ${week} Courage Workbook\n\nCourage Challenges Completed:\n${challenges.join('\n')}\n\nRemember: Courage is acting despite fear, not without fear.`;
            downloadText(content, `Courage_Week${week}.txt`);
            alert('Courage journey recorded!');
        }
        
        function downloadText(text, filename) {
            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            a.click();
        }
        
        // Auto-save
        document.querySelectorAll('textarea, input[type="text"]').forEach((el, idx) => {
            el.addEventListener('input', () => {
                localStorage.setItem(`courage_${idx}`, el.value);
            });
            const saved = localStorage.getItem(`courage_${idx}`);
            if (saved) el.value = saved;
        });
    </script>
